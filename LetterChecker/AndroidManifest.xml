<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.letterchecker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.letterchecker.Start"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.letterchecker.StudentLogin"
            android:label="@string/title_activity_student_login" >
        </activity>
        <activity
            android:name="com.example.letterchecker.TeacherLogin"
            android:label="@string/title_activity_teacher_login" >
        </activity>
        <activity
            android:name="com.example.letterchecker.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.letterchecker.ShowClassNames"
            android:label="@string/title_activity_show_class_names" >
        </activity>
        <activity
            android:name="com.example.letterchecker.ListOfTeachers"
            android:label="@string/title_activity_list_of_teachers" >
        </activity>
    </application>

</manifest>
