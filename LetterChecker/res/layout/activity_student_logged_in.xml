<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    tools:context=".StudentLoggedIn"
    android:gravity="center_horizontal" 
    android:background="@drawable/bg">

    <Button
        android:id="@+id/startLessonBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_blue_button"
        android:textColor="#FFFFFF"
        android:text="Start Lesson"
        android:layout_marginTop = "20dp" />

    <Button
        android:id="@+id/studentLogoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_yellow_button"
        android:text="Logout" 
        android:layout_marginTop = "20dp"/>

</LinearLayout>